<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.m2e.launching.mavenLaunchParticipants">
      <mavenLaunchParticipant
            class="com.ifedorenko.m2e.sourcelookup.internal.launch.SourceLookupMavenLaunchParticipant"
            id="com.ifedorenko.m2e.sourcelookup"
            name="Dynamic Sources Lookup"
            modes="debug">
      </mavenLaunchParticipant>
   </extension>

   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="com.ifedorenko.m2e.sourcelookup.internal.jdi.JDIStratumTester"
            id="com.ifedorenko.m2e.sourcelookup.jdiStratumTest"
            namespace="com.ifedorenko.m2e.sourcelookup"
            properties="m2estratum"
            type="org.eclipse.debug.core.model.DebugElement">
      </propertyTester>
   </extension>

    <extension
          point="org.eclipse.core.variables.dynamicVariables">
       <variable
             description="Returns absolute filesystem path of source lookup java agent."
             name="sourcelookup_agent_path"
             resolver="com.ifedorenko.m2e.sourcelookup.internal.AgentPathVariableResolver"
             supportsArgument="false">
       </variable>
    </extension>
    <extension
          point="org.eclipse.debug.core.launchDelegates">
       <launchDelegate
             delegate="com.ifedorenko.m2e.sourcelookup.internal.jdt.launch.RemoteJavaApplicationLauncher"
             delegateDescription="Remote Java Application launcher with more reliable source code lookup"
             id="com.ifedorenko.m2e.sourcelookup.remoteJavaApplication"
             modes="debug"
             name="Advanced Remote Java Application"
             type="org.eclipse.jdt.launching.remoteJavaApplication">
       </launchDelegate>
    </extension>
</plugin>
