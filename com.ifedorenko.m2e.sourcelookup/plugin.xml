<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.m2e.launching.mavenLaunchParticipants">
      <mavenLaunchParticipant
            class="com.ifedorenko.m2e.sourcelookup.internal.launch.SourceLookupMavenLaunchParticipant"
            id="com.ifedorenko.m2e.sourcelookup"
            name="Dynamic Sources Lookup"
            modes="debug">
      </mavenLaunchParticipant>
   </extension>

    <extension
          point="org.eclipse.debug.core.launchDelegates">
       <launchDelegate
             delegate="com.ifedorenko.m2e.sourcelookup.internal.jdt.launch.RemoteJavaApplicationLauncher"
             delegateDescription="Remote Java Application launcher with more reliable source code lookup"
             id="com.ifedorenko.m2e.sourcelookup.remoteJavaApplication"
             modes="debug"
             name="Advanced Remote Java Application"
             type="org.eclipse.jdt.launching.remoteJavaApplication">
       </launchDelegate>
    </extension>
</plugin>
